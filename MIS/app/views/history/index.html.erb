<h1>History#index: <%= @headertext %></h1>
<p>Find me in app/views/history/index.html.erb</p>
<table rules = "all">
    <thead>
        <th>Description</th>
        <th>Date</th>
        <th></th>
    </thead>
    <tbody>
<% @histories.each do |history| %>
    <tr>
    	<td><%= history.description %></td>
    	<td><%= history.date %></td>
        <% if @allowEdit == true %>
			<td><%= link_to "Edit", {:controller => "history", :action => "edit", :history_id => history.id} %></td>
        <% end %>
        <% if @allowDelete == true %>
        	<td><%= link_to "Delete", {:controller => "history", :action => "delete", :history_id => history.id} %></td>
        <% end %>
    </tr>
<% end %>
    </tbody>
</table>
<br>
<%= link_to "Add History Item", {:controller => "history", :action => "create", :patient_id => params[:id]} %>
<br><br>
<a href= "<%= @main_route %>">Main Menu</a>
